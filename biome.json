{
	"$schema": "node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"ignore": [
			"_cjs",
			"_esm",
			"_types",
			".turbo",
			".next",
			".mesh",
			".graphclient",
			".storybook",
			"storybook-static",
			"node_modules",
			"**/node_modules",
			"CHANGELOG.md",
			"dist",
			"artifacts",
			"cache",
			"coverage",
			"deployments",
			"test-results",
			"test/contracts",
			"typechain",
			"tsconfig.json",
			"tsconfig.*.json",
			"packages/wagmi/src/hooks/exploits/data/rp2-approvals.json"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 80
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useHeadingContent": "off",
				"useKeyWithClickEvents": "off",
				"useKeyWithMouseEvents": "off",
				"useButtonType": "off",
				"useValidAnchor": "off"
			},
			"correctness": {
				"noUnusedVariables": "error",
				"noUnusedImports": "error",
				"useExhaustiveDependencies": "error"
			},
			"performance": {
				"noDelete": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"noParameterAssign": "off",
				"useShorthandArrayType": "error",
				"noUselessElse": "off",
				"noUnusedTemplateLiteral": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off",
				"noExplicitAny": "off",
				"noImplicitAnyLet": "off"
			},
			"complexity": {
				"useLiteralKeys": "off",
				"noForEach": "off",
				"noStaticOnlyClass": "off",
				"noThisInStatic": "off",
				"useSimpleNumberKeys": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingCommas": "all",
			"semicolons": "asNeeded"
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"overrides": [
		{
			"include": ["*.test.ts", "*.test.tsx", "packages/db", "*.script.ts"]
		}
	]
}
